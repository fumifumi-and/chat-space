.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__current-group 
        = @group.name
      .chat-main__group-info__left-box__member-list
        Member :  
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__edit-btn
      = link_to edit_group_path(@group.id), class: "edit__btn" do
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__input-box
        = f.text_field :content, class: 'message-text', placeholder: 'type a message'
        .chat-main__message-form__input-box__mask
          = f.label :image, class: 'image-icon' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'file'
        = f.submit 'Send', class: 'chat-main__message-form__send-btn'